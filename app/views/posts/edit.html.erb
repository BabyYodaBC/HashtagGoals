<h1>Edit a Post page!</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<%= e %>
<% end %>
<% end %>

<%= form_for @post do |f| %>

<%= f.label :user_id%>
<%= f.text_field :user_id %>

<%= f.label :goal_id%>
<%= f.text_field :goal_id %>

<%= f.label :content%>
<%= f.text_area :content %>

<%= f.label :img_url %>
<%= f.text_field :"img_url" %>

<%= f.submit , class: "btn" %>
<% end %>