<%# 
<div class="goal-video-wrapper">
  <%= video_tag random_glow_video, autoplay: :autoplay, loop: :loop, mute: :mute, class: "goal_video" %>
<!-- <div class="backg"> -->
    <div class="container-user">
      <div class="simple-box">
        <h1> <%=@user.name%></h1>

        <% if flash[:success] %>
            <h2> <%= flash[:success] %> </h2>
        <% end %>
        
        <p> Name : <%= @user.name %> 
        <p> Email : <%= @user.email %> <br>
        <p> Location : <%= @user.location %> <br>
        </div>

        <div class="simple-box">
        <h1>My Owned Goals</h1>
        <p><% @goals.each do |g| %>
        <%= link_to g.title, g %><br>
        <% end %>
        </div>

        <div class="simple-box">
        <h3>Goals I'm Following</h3>
        <p><% @followed_goals.each do |g| %>
        <%= link_to g.title, g %><br>
        <% end %>
        </div
        >
        <div class="container-buttons buttonWW-group">
        <% if current_user == @user %>
          <%= button_to 'Edit Profile', edit_user_path(@user), method: :get, class: "buttonWW" %>
        <% end %>

        <% if current_user == @user %>
          <%= button_to 'Delete this Account', user_path(@user), method: :delete, data: { confirm: 'are u sure lol' }, class: "buttonWW" %>
        <% end %>
        <div>
      <%# </div> %>
